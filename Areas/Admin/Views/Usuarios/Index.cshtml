@model List<UsersViewModel>


<h2>Lista de Usu√°rios</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-md-8 col-lg-8">
            <table class="table table-dark table-striped text-center">
                <thead>
                    <tr>
                        <th style="color: #fff;">Nome Usuario</th>
                        <th style="color: #fff;">Email</th>
                        <th style="color: #fff;">Tipo de Usuario</th>
                        <th><input type="hidden" name=""></th>
                        <th><input type="hidden" name=""></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="table-dark">@user.Nome</td>
                            <td class="table-dark">@user.Email</td>
                            @foreach (var i in user.Tipo)
                            {
                                <td class="table-dark">@i</td>
                            }

                            <td class="table-dark"><a asp-action="EditarUsuario" asp-route-id="@user.Id"><button
                                        class="btn btn-primary">Editar</button></a></td>
                            <td class="table-dark"><a asp-action="ExcluirUsuario" asp-route-id="@user.Id"><button
                                        class="btn btn-primary">Excluir</button></a></td>



                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>