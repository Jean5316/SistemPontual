@model IEnumerable<Produto>
<div class="container">
    <h1>@ViewBag.Titulo</h1>

    <div>
        <a asp-action="CriarProduto"><button class="btn btn-primary btn-lg">Criar Produto</button></a>
        <a asp-action="Index" asp-controller="Admin"><button class="btn btn-primary btn-lg">Voltar</button></a>
    </div>


    <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
            <table class="table table-dark table-striped text-center">
                <thead>
                    <tr>
                        <br>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
                        <th>@Html.DisplayNameFor(model => model.Preco)</th>
                        <th><input type="hidden" name=""></th>
                        <th><input type="hidden" name=""></th>
                        <th><input type="hidden" name=""></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => i.Id)</td>
                            <td>@Html.DisplayFor(model => i.Nome)</td>
                            <td>@Html.DisplayFor(model => i.Quantidade)</td>
                            <td>@Html.DisplayFor(model => i.Preco)</td>
                            <td><a asp-action="EditarProduto" asp-route-id="@i.Id"><button
                                        class="btn btn-primary btn-md">Editar</button></a></td>
                            <td><a asp-action="Detalhes" asp-route-id="@i.Id"><button
                                        class="btn btn-primary btn-md">Detalhes</button></a></td>
                            <td> <a asp-action="ExcluirProduto" asp-route-id="@i.Id"><button
                                        class="btn btn-primary btn-md">Deletar</button></a></td>

                        </tr>

                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
