@model Produto
<div class="container">
    <div class="col-sm-4 col-md-4 col-lg-4">
        <h1>@ViewBag.Titulo</h1>
        <form asp-area="Admin" asp-action="CriarProduto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" placeholder="Nome do Produto">
            @Html.ValidationMessageFor(Model => Model.Nome,"", new { @class = "text-danger" })<br>

            <label asp-for="Quantidade" class="form-label"></label>
            <input asp-for="Quantidade" class="form-control" placeholder="Quantidade Padrão 0" value="0">
            @Html.ValidationMessageFor(Model => Model.Quantidade,"", new { @class = "text-danger" })<br>

            <label asp-for="Preco" class="form-label"></label>
            <input asp-for="Preco" class="form-control" placeholder="Preço Padrão R$0,00" value="0,00">
            @Html.ValidationMessageFor(Model => Model.Preco,"", new { @class = "text-danger" })<br>

            <button type="submit" class="btn btn-primary mt-2">Salvar</button>

        </form>
            <a asp-area="Admin" asp-controller="Produtos" asp-action="Index"><button class="btn btn-primary mt-2">Voltar</button></a>
    </div>
</div>