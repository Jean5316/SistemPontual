@using TestePontual.ViewModels

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Account" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post" class="navbar-left">

    <ul class="nav navbar-nav navbar-left">
        <label class="nav-link btn btn-link">@User.Identity.Name&nbsp;</label>
            <button type="submit" style="width:auto" class="nav-link btn btn-link py-0">
                Logout
            </button>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav nav-bar-left">
    <a class="nav-link text-white" asp-area="Account" asp-controller="Account" asp-action="Login"
        asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)">&nbsp; Log
        in&nbsp; </a>

</ul>

}