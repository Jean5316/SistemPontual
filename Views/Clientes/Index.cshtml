@model ClienteListViewModel
@{
    //Usada para trocar o template padrao da pagina
    @* Layout = null; *@
}


<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <h1 class="text-center">@ViewBag.Titulo</h1>


        <div class="col-sm-10 col-md-10 col-lg-10" style="height: 100vh;">
            <a asp-action="Criar" class="text-center"><button class="btn btn-primary">Adicionar Cliente</button></a>
            <a asp-action="Index" asp-controller="Home" class="text-center"><button
                    class="btn btn-primary">Voltar</button></a><br>
            <table class="table table-dark table-striped text-center">
                <thead>
                    <tr>
                        <br>
                        <th>Nome</th>
                        <th>Numero de Contato</th>
                        <th>Email</th>
                        <th>Cidade</th>
                        <th>Estado</th>
                        <th>CEP</th>
                        <th><input type="hidden" name=""></th>
                        <th><input type="hidden" name=""></th>
                        <th><input type="hidden" name=""></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.Clientes)
                    {
                        <partial name="_ClienteResumo" for="@i" />
                    }
                </tbody>
            </table>
        </div>

    </div>



    @* <h1>@ViewData["Data"]</h1>
    <h2>@ViewBag.Total:@ViewBag.TotalClientes</h2>
    <h2>@TempData["Nome"]</h2> *@

</div>
