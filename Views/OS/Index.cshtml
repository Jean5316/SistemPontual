@model IEnumerable<OrdemServico>
<div class="container">
    <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
            <h1>@ViewBag.Titulo</h1>
            <a asp-action="CriarOS"><button class="btn btn-primary mb-2">Adicionar nova Ordem de Serviço</button></a>
            <a asp-action="Index" asp-controller="Home"><button class="btn btn-primary mb-2">Voltar</button></a>
            <table class="table table-dark table-striped text-center">
                <thead>
                    @*Cabeçalho da Tabela*@
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.NomeCliente)</th>
                        <th>@Html.DisplayNameFor(model => model.Tecnico)</th>
                        <th>@Html.DisplayNameFor(model => model.Data)</th>
                        <th></th>
                        <th></th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => i.Id)</td>
                            <td>@Html.DisplayFor(model => i.NomeCliente)</td>
                            <td>@Html.DisplayFor(model => i.Tecnico)</td>
                            <td>@Html.DisplayFor(model => i.Data)</td>
                            <td><a asp-action="EditarProduto" asp-route-id="@i.Id"><button
                                        class="btn btn-primary btn-md">Editar</button></a></td>
                            <td><a asp-action="Detalhes" asp-route-id="@i.Id"><button
                                        class="btn btn-primary btn-md">Detalhes</button></a></td>
                            <td> <a asp-action="ExcluirProduto" asp-route-id="@i.Id"><button
                                        class="btn btn-primary btn-md">Deletar</button></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>