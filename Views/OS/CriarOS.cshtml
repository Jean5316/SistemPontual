@model OrdemServico


<h1 class="text-center">@ViewBag.Titulo</h1>
<div class="col-sm-4 col-md-4 col-lg-4">

    <form asp-action="CriarOS" asp-controller="OS">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label  class="control-label">@Html.DisplayNameFor(model => model.NomeCliente)</label>
            <input asp-for="NomeCliente" class="form-control"
                placeholder="Nome do Cliente">
            @Html.ValidationMessageFor(model => model.NomeCliente, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label  class="control-label">@Html.DisplayNameFor(model => model.Tecnico)</label>
            <input asp-for="Tecnico" class="form-control" placeholder="Nome do tecnico">
            @Html.ValidationMessageFor(model => model.Tecnico, "", new { @class = "text-danger" })
        </div>

         <div class="form-group">
            <label  class="control-label">@Html.DisplayNameFor(model => model.Status)</label>
            <select class="form-control">
                <option>Selecione o status da OS</option>
                @foreach (var opcao in ViewBag.Opcoes){
                    <option value="@opcao">@opcao</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label  class="control-label">@Html.DisplayNameFor(model => model.Data)</label>
            <input asp-for="Data" class="form-control">
            @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label  class="control-label">@Html.DisplayNameFor(model => model.Descricao)</label>
            <textarea asp-for="Descricao" cols="50" rows="5" placeholder="Descrição da OS"></textarea><br>
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>

        <button class="btn btn-primary">Salvar</button>
    </form>
    <a asp-action="Index" asp-controller="OS" ><button class="btn btn-primary">Voltar</button></a>
</div>
